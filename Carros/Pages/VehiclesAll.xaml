<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carros.Pages.VehiclesAll"
             Title="Veículos"
             >
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,1.2">
            <GradientStop Color="#020024" Offset="0.1"/>
            <GradientStop Color="#7e46a8" Offset="0.6"/>

        </LinearGradientBrush>

    </ContentPage.Background>
    <VerticalStackLayout>
        <Label 
            Padding="25"
            Text="Carros disponíveis:"
            VerticalOptions="Center" 
            HorizontalOptions="Fill"
            TextColor="White"
            FontFamily="Oswalbold"
            FontSize="20"
            />
        <Frame Margin="10"
               HasShadow="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
                <Label Text="Aqui ficará os carros após o CRUD"
                       FontSize="30"/>
            </Grid>
     </Frame>
    </VerticalStackLayout>
</ContentPage>